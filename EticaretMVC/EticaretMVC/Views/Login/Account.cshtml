@model EticaretMVC.Models.DTO.UserDTO
@{
    ViewBag.Title = "Account";
}

<h2>Account</h2>

<div class="container">


    <div id="user">
        @using (Html.BeginForm("Account", "Login", FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.ValidationSummary(true)
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "User Name", required = "required" })

            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password", required = "Lütfen Şifre Giriniz" })
            @Html.ValidationMessageFor(x => x.Password)
            <label class="checkbox">
                <input type="checkbox" value="remember-me">
                Remember me
       
            </label>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <h2>@Html.ActionLink("Create New User", "Login", "Login")</h2>
        }
    </div>

</div>
